div
  .form-group(plug="widget")
    label.d-flex.align-items-end
      div
        span(ld="label")
        span.text-danger.ml-2(ld="is-required") *
      .flex-grow-1
      .m-edit: .text-danger.text-sm(ld="limitation")
    .text-sm.text-muted: div(ld="desc", style="margin:-.6em 0 .7em")
    .m-edit(ld="input")
      div
        label.mr-3.mb-2.clickable(ld-each="option")
          input.mr-1(ld="checkbox",type="checkbox")
          span(ld="text")
      div(ld="other"): label.clickable.d-flex.align-items-center
        input.mr-1(ld="other-check",type="checkbox")
        .mr-2.text-nowrap 其它
        input.form-control.form-control-sm(type="text",ld="other-text")
    .m-edit: .text-danger.text-sm.mt-2.note(ld-each="note")
    .m-view(ld="content")
  script(type="@plotdb/block"): include:lsc index.ls
